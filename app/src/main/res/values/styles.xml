<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/abeezee_italic</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- tab 2-->

    <style name="AppTabLayout2" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance2</item>
        <item name="tabSelectedTextColor">@color/orange</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance2" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/abeezee</item>
        <item name="android:textColor">@color/color_tab_item_home</item>
        <item name="textAllCaps">false</item>
    </style>


</resources>