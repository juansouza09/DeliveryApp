<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/color_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/retangulo"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/retangulo" />

    <ImageView
        android:id="@+id/img_lanche"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/retangulo"
        app:layout_constraintStart_toStartOf="@+id/retangulo"
        app:layout_constraintTop_toTopOf="@+id/retangulo"
        app:srcCompat="@drawable/img_burger" />

    <TextView
        android:id="@+id/text_nome_lanche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee_italic"
        android:text="Combo XXXXXXXXXXX"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/img_lanche"
        app:layout_constraintTop_toTopOf="@+id/retangulo"/>

    <TextView
        android:id="@+id/text_valor_lanche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee_italic"
        android:text="R$00,00"
        android:textColor="@color/orange"
        android:textSize="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/img_lanche"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_lanche" />

        <ImageButton
            android:id="@+id/bnt_login"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/botaored"
            app:layout_constraintBottom_toBottomOf="@+id/retangulo"
            app:layout_constraintEnd_toEndOf="@+id/retangulo"
            app:layout_constraintStart_toEndOf="@+id/text_valor_lanche"
            app:layout_constraintTop_toBottomOf="@+id/text_nome_lanche"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/text_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee_italic"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/bnt_login"
        app:layout_constraintEnd_toEndOf="@+id/bnt_login"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/bnt_login"
        app:layout_constraintTop_toTopOf="@+id/bnt_login"
        app:layout_constraintVertical_bias="0.666" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_mais"
        android:text="Button"
        android:layout_marginEnd="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/retangulo"
        app:layout_constraintEnd_toEndOf="@+id/retangulo"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toEndOf="@+id/bnt_login"
        app:layout_constraintTop_toTopOf="@+id/retangulo"
        app:layout_constraintVertical_bias="0.512"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_menos"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="@+id/retangulo"
            app:layout_constraintEnd_toStartOf="@+id/bnt_login"
            app:layout_constraintHorizontal_bias="0.695"
            app:layout_constraintStart_toEndOf="@+id/text_valor_lanche"
            app:layout_constraintTop_toTopOf="@+id/retangulo"
            app:layout_constraintVertical_bias="0.512"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>