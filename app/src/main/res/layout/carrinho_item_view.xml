<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F8">

    <ImageView
        android:id="@+id/retangulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.008"
        app:srcCompat="@drawable/retangulo" />

    <ImageView
        android:id="@+id/img_lanche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/retangulo"
        app:layout_constraintEnd_toEndOf="@+id/retangulo"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="@+id/retangulo"
        app:layout_constraintTop_toTopOf="@+id/retangulo"
        app:layout_constraintVertical_bias="0.321"
        app:srcCompat="@drawable/img_prato" />

    <TextView
        android:id="@+id/text_nome_lanche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee_italic"
        android:text="Combo XXXXXXXXXXX"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="@+id/retangulo"
        app:layout_constraintEnd_toEndOf="@+id/retangulo"
        app:layout_constraintHorizontal_bias="0.177"
        app:layout_constraintStart_toEndOf="@+id/img_lanche"
        app:layout_constraintTop_toTopOf="@+id/retangulo"
        app:layout_constraintVertical_bias="0.285" />

    <TextView
        android:id="@+id/text_valor_lanche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee_italic"
        android:text="R$00,00"
        android:textColor="@color/orange"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/retangulo"
        app:layout_constraintEnd_toEndOf="@+id/retangulo"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toEndOf="@+id/img_lanche"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_lanche"
        app:layout_constraintVertical_bias="0.134" />

    <ImageButton
        android:id="@+id/bnt_login"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:background="@drawable/botaored"
        app:layout_constraintBottom_toBottomOf="@+id/retangulo"
        app:layout_constraintEnd_toEndOf="@+id/retangulo"
        app:layout_constraintHorizontal_bias="0.367"
        app:layout_constraintStart_toEndOf="@+id/text_valor_lanche"
        app:layout_constraintTop_toBottomOf="@+id/text_nome_lanche"
        app:layout_constraintVertical_bias="0.155"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/qtd_lanche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee_italic"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/bnt_login"
        app:layout_constraintEnd_toEndOf="@+id/bnt_login"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/bnt_login"
        app:layout_constraintTop_toTopOf="@+id/bnt_login"
        app:layout_constraintVertical_bias="0.666" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_mais"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/retangulo"
        app:layout_constraintEnd_toEndOf="@+id/retangulo"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toEndOf="@+id/bnt_login"
        app:layout_constraintTop_toTopOf="@+id/retangulo"
        app:layout_constraintVertical_bias="0.512"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_menos"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/retangulo"
        app:layout_constraintEnd_toStartOf="@+id/bnt_login"
        app:layout_constraintHorizontal_bias="0.695"
        app:layout_constraintStart_toEndOf="@+id/text_valor_lanche"
        app:layout_constraintTop_toTopOf="@+id/retangulo"
        app:layout_constraintVertical_bias="0.512"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>